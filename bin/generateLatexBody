#!/usr/bin/python

from optparse import OptionParser
from random import random

class Generator(object):

    version = '1.0'

    def __init__(self):
        self.parser = OptionParser(version=self.version)
        self.parser.add_option(
            '-c', '--chapters',
            action='store', dest='chapters', default='2',
            help='amount of chapters (Default: 2)',
        )
        self.parser.add_option(
            '-s', '--sections',
            action='store', dest='sections', default='4',
            help='amount of sections per chapter (Default: 4)',
        )
        self.parser.add_option(
            '-p', '--parsep',
            action='store', dest='parsep', default=1,
            help=r'paragraph seperator: amount of carriage returns (Default: 1)',
        )
        self.options, self.args = self.parser.parse_args()
        print self.generate()

    def generate(self):
        chapters = int(self.options.chapters)
        sections = int(self.options.sections)
        parsep = '\n' * int(self.options.parsep)
        tex = []
        for c in range(0, chapters):
            tex.append(r'\chapter{%s}' % self.generateHeadingText())
            for s in range(0, sections):
                tex.append(r'\section{%s}' % self.generateHeadingText())
                tex.append(parsep.join(self.getParagraphs(paragraphs=3)))
                for x in range(0, int(round(random() * 4))):
                    tex.append(r'\subsection{%s}' % self.generateHeadingText())
                    tex.append(parsep.join(self.getParagraphs(paragraphs=1)))
        return '\n'.join(tex)
                
            

    def generateHeadingText(self):
        # length (words)
        headingLength = int(round(random() * 4)) + 5
        # find start position
        startPos = int(round(random() * (len(WORDS) - headingLength)))
        text = ' '.join(WORDS[startPos:startPos+headingLength])
        return text

    def getParagraphs(self, paragraphs=2):
        paras = []
        for x in range(0, paragraphs):
            i = int(round(random() * len(PARAGRAPHS))-1)
            paras.append(PARAGRAPHS[i])
        return paras
        


